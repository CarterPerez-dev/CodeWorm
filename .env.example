# .env.example

# =============================================================================
# CodeWorm Environment Configuration
# Copy to .env (prod) or .env.development (dev) and fill in values
# =============================================================================

# =============================================================================
# HOST PORTS
# =============================================================================
OLLAMA_HOST_PORT=47311
REDIS_HOST_PORT=26849
DASHBOARD_HOST_PORT=53172
NGINX_HOST_PORT=38491
VITE_HOST_PORT=41857

# =============================================================================
# Application
# =============================================================================
APP_NAME=codeworm
APP_VERSION=1.0.2
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# Ollama
# =============================================================================
OLLAMA_MODEL=qwen2.5:7b
OLLAMA_CONTAINER_PORT=11434

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_CONTAINER_PORT=6379

# =============================================================================
# Dashboard Backend (FastAPI)
# =============================================================================
DASHBOARD_HOST=0.0.0.0
DASHBOARD_CONTAINER_PORT=8000

# =============================================================================
# Nginx
# =============================================================================
NGINX_CONTAINER_PORT=80

# =============================================================================
# Dashboard Frontend (Vite dev only)
# =============================================================================
VITE_CONTAINER_PORT=5173
VITE_API_URL=/api
VITE_WS_URL=ws://localhost:38491/ws
VITE_APP_TITLE=CodeWorm Dashboard

# =============================================================================
# CodeWorm Daemon (runs on host via systemd, not in Docker)
# =============================================================================
CODEWORM_DATA_DIR=./data
CODEWORM_CONFIG_DIR=./config
